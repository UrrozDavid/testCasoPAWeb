@model IEnumerable<TBA.Mvc.Models.UserViewModel>

<div class="container mt-5" style="max-width: 1100px;">
    <h2 class="text-center mb-4">Users</h2>
    <p>
        <a asp-action="Create" class="btn btn-success">Create New</a>
    </p>

    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Password</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td class="text-muted fst-italic">@user.DisplayPassword</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@user.UserId" class="btn btn-info btn-sm">Detail</a>
                        <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@user.UserId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
