@model TBA.Mvc.Models.UserViewModel

@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-5" style="max-width: 1100px;">
    <h2 class="mb-4 text-center">Delete User</h2>
    <h5 class="text-center">Are you sure you want to delete this user?</h5>

    <div class="card shadow-sm my-4 p-4">
        <dl class="row">
            <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Username)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Username)</dd>

            <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Email)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.PasswordHash)</dt>
            <dd class="col-sm-9 text-muted fst-italic">@Html.DisplayFor(model => model.DisplayPassword)</dd>
        </dl>

        <div class="text-center mt-4">
            <form asp-action="Delete" class="d-inline">
                <input type="hidden" asp-for="UserId" />
                <button type="submit" class="btn btn-primary me-2">Delete</button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</div>
