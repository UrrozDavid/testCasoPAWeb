@{
    ViewData["Title"] = "Home Page";
}

<div class="mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-3 mb-4">Welcome to TBA Trello</h1>
            <p class="lead mb-4">
                Organize your tasks, collaborate with your team, and boost your productivity.<br />
                Start managing your boards and cards now!
            </p>
            <a asp-controller="Boards" asp-action="Index" class="btn btn-primary btn-lg mb-3">
                Go to My Boards
            </a>
            <div class="mt-4">
                <div class="card-body">
                    <h5 class="card-title">What is TBA Trello?</h5>
                    <p class="card-text">
                        TBA Trello is a simple and powerful tool for task management inspired by Trello.<br />
                        Create boards, add cards, assign tasks, and track your progress visually.
                    </p>
                    <a href="https://learn.microsoft.com/aspnet/core" target="_blank" class="btn btn-outline-secondary">
                        Learn about ASP.NET Core
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
