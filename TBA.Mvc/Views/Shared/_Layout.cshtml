<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - TBA.Mvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TBA.Mvc.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom mb-3">
            <div class="container-fluid">

                <!-- Botón hamburguesa para menú lateral offcanvas -->
                <button class="btn btn-outline-primary me-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasMenu" aria-controls="offcanvasMenu" aria-label="Toggle menu">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <a class="navbar-brand" asp-controller="Home" asp-action="Index">TBA.Mvc</a>

                <!-- Aquí no incluimos el menú horizontal, solo usuario a la derecha -->
                <ul class="navbar-nav ms-auto">
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown"
                               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li class="px-3 py-2">
                                    <strong>@User.Identity.Name</strong><br />
                                    <small class="text-muted">@User.FindFirst("email")?.Value</small>
                                </li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="dropdown-item p-0">
                                        <button type="submit" class="btn btn-link w-100 text-start">Logout</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                    }
                </ul>

            </div>
        </nav>

        <!-- Offcanvas menú lateral -->
        <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasMenu" aria-labelledby="offcanvasMenuLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="offcanvasMenuLabel">Menu</h5>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body p-0">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><a asp-controller="Home" asp-action="Index" class="nav-link">Home</a></li>
                    <li class="list-group-item"><a asp-controller="Lists" asp-action="Index" class="nav-link">Lists</a></li>
                    <li class="list-group-item"><a asp-controller="Labels" asp-action="Index" class="nav-link">Labels</a></li>
                    <li class="list-group-item"><a asp-controller="BoardMembers" asp-action="Index" class="nav-link">BoardMembers</a></li>        
                    <li class="list-group-item"><a asp-controller="User" asp-action="Index" class="nav-link">Users</a></li>
                    <li class="list-group-item"><a asp-controller="Comments" asp-action="Index" class="nav-link">Comments</a></li>
                    <li class="list-group-item"><a asp-controller="Notifications" asp-action="Index" class="nav-link">Notification</a></li>
                    <li class="list-group-item"><a asp-controller="Tasks" asp-action="Index" class="nav-link text-success">Tasks</a></li>
                    <li class="list-group-item"><a asp-controller="Boards" asp-action="Index" class="nav-link text-success">Boards</a></li>
                    <li class="list-group-item"><a asp-controller="Cards" asp-action="Index" class="nav-link text-danger">Cards</a></li>
                </ul>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted mt-3">
        <div class="container">
            &copy; 2025 - TBA.Mvc - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
