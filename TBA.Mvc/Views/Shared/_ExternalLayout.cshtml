<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TBA.Mvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TBA.Mvc.styles.css" asp-append-version="true" />

    <!-- Template resources -->
    <!-- App favicon -->
    <link rel="shortcut icon" href="`~/images/favicon.ico">

    <!-- Theme Config Js -->
    <script src="~/js/hyper-config.js"></script>

    <!-- Vendor css -->
    <link href="~/css/vendor.min.css" rel="stylesheet" type="text/css" />

    <!-- App css -->
    <link href="~/css/app-creative.min.css" rel="stylesheet" type="text/css" id="app-style" />

    <!-- Icons css -->
    <link href="~/css/icons.min.css" rel="stylesheet" type="text/css" />

</head>
<body class="@ViewData["BodyClass"]">
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>


        <footer class="footer bg-white text-muted w-100 py-2 border-top m-0">
            <div class="container-fluid text-center m-0">
                &copy; 2025 - TBA.Mvc - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-muted">Privacy</a>
            </div>
        </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
