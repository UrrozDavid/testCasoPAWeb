@model TBA.Models.Entities.Notification

@{
    ViewData["Title"] = "Notification Details";
}

<div class="container mt-5">
    <h2 class="mb-4">Notification Details</h2>

    <div class="card p-4 shadow-sm mb-4">
        <dl class="row">
            <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(m => m.Message)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Message)</dd>

            <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(m => m.NotifyAt)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.NotifyAt)</dd>

            <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(m => m.IsRead)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.IsRead)</dd>

            <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(m => m.Card)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Card.Title)</dd>

            <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(m => m.User)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.User.Email)</dd>
        </dl>
    </div>

    <div class="d-flex gap-3">
        <a asp-action="Edit" asp-route-id="@Model?.NotificationId" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>

