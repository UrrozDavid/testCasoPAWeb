@model TBA.Models.Entities.BoardMember

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<div class="card shadow-sm mb-4" style="max-width: 600px;">
    <div class="card-body">
        <h4 class="card-title mb-3">Are you sure you want to delete this?</h4>

        <h5 class="mb-3">BoardMember Details</h5>
        <dl class="row">
            <dt class="col-sm-2">Board</dt>
            <dd class="col-sm-10">@Model.Board?.Name</dd>

            <dt class="col-sm-2">Usuario</dt>
            <dd class="col-sm-10">@Model.User?.Email</dd>

            <dt class="col-sm-2">Rol</dt>
            <dd class="col-sm-10">@Model.Role</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" name="boardId" value="@Model.BoardId" />
            <input type="hidden" name="userId" value="@Model.UserId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
