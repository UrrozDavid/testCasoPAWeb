@model TBA.Models.Entities.Board

@{
    ViewData["Title"] = "Board Details";
}

<div class="container mt-5">
    <div class="card shadow rounded-3">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Board Details</h2>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label fw-bold">Name:</label>
                <div class="form-control-plaintext">@Model.Name</div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Description:</label>
                <div class="form-control-plaintext">@Model.Description</div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Created By (ID):</label>
                <div class="form-control-plaintext">@Model.CreatedBy</div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Creation Date:</label>
                <div class="form-control-plaintext">@Model.CreatedAt</div>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.BoardId" class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
