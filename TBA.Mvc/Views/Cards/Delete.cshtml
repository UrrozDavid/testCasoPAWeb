@model TBA.Models.Entities.Card

@{
    ViewData["Title"] = "Delete Card";
}

<div class="container mt-5" style="max-width: 1100px;">
    <h2 class="mb-4 text-center">Delete Card</h2>
    <h5 class="mb-4 text-center">Are you sure you want to delete this card?</h5>

    <div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Title:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-4">Description:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-4">Created At:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedAt)</dd>

                <dt class="col-sm-4">Due Date:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.DueDate)</dd>

                <dt class="col-sm-4">List:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.List.Name)</dd>
            </dl>
        </div>
    </div>

    <div class="text-center">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="CardId" />
            <button type="submit" class="btn btn-primary me-2">Delete</button>
        </form>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</div>
