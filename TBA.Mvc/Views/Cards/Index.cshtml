@model IEnumerable<TBA.Models.Entities.Card>

@{
    ViewData["Title"] = "Index";
    var boardId = Model.FirstOrDefault()?.List?.Board?.BoardId ?? 0;
}

<div class="container mt-5" style="max-width: 1100px;">
    <h2 class="text-center mb-4">Cards</h2>

    <p>
        <a asp-action="Create" asp-route-boardId="@boardId" class="btn btn-success">Create New</a>
    </p>
 

    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Created At</th>
                <th>Due Date</th>
                <th>List</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var card in Model)
            {
                <tr>
                    <td>@card.Title</td>
                    <td>@card.Description</td>
                    <td>@card.CreatedAt</td>
                    <td>@card.DueDate</td>
                    <td>@card.List?.Name</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@card.CardId" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@card.CardId" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@card.CardId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
