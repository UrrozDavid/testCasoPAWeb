@model LoginViewModel

@{
    Layout = "~/Views/Shared/_ExternalLayout.cshtml";
    ViewData["Title"] = "Login";
    ViewData["BodyClass"] = "login-page";
}

<div class="account-pages pt-2 pt-sm-5 pb-4 pb-sm-5 position-relative">
    <div class="container-no-b">
        <div class="row justify-content-center">
            <div class="col-xxl-4 col-lg-5">
                <div class="card">

                    <!-- Logo -->
                    <div class="card-header py-4 text-center bg-primary">
                        <a href="#">
                            <span><img src="~/images/logo.png" alt="logo" height="22"></span>
                        </a>
                    </div>

                    <div class="card-body p-4">

                        <div class="text-center w-75 m-auto">
                            <h4 class="text-dark-50 text-center pb-0 fw-bold">Sign In</h4>
                            <p class="text-muted mb-4">Enter your email address and password to access the system.</p>
                        </div>

                        <!-- Login Form -->
                        <form asp-action="Login" method="post">
                            @if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
                            {
                                <div class="alert alert-danger">
                                    @ViewData.ModelState[""].Errors[0].ErrorMessage
                                </div>
                            }


                            <!-- Email Input -->
                            <div class="mb-3">
                                <label for="Email" class="form-label">Email address</label>
                                <input class="form-control" asp-for="Email" type="email" id="Email" placeholder="Enter your email" required>
                            </div>


                            <div class="mb-3">
                                <!-- Forgot Password Button -->
                                <a asp-controller="Account" asp-action="ForgotPassword" class="text-muted float-end"><small>Forgot your password?</small></a>

                                <!-- Password Input -->
                                <label for="Password" class="form-label">Password</label>

                                <div class="input-group input-group-merge">
                                    <input asp-for="Password" type="password" id="Password" class="form-control" placeholder="Enter your password" required>
                                    <div class="input-group-text" data-password="false">
                                        <span class="password-eye"></span>
                                    </div>
                                </div>

                            </div>

                            <!-- Login Button  -->
                            <div class="mb-3 mb-0 text-center">
                                <button class="btn btn-primary" type="submit"> Log In </button>
                            </div>
                        </form>
                        <!-- End Login Form -->



                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Vendor js -->
<script src="~/js/vendor.min.js"></script>

<!-- App js -->
<script src="~/js/app.min.js"></script>
