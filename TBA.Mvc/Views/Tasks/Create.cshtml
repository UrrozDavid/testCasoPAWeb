@model TBA.Models.Entities.Card

@{
    ViewData["Title"] = "New Task";
}

<div class="mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="">
                <div class="card-body">
                    <h4 class="fw-bold mb-4 text-center text-primary">Create New Task</h4>

                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-medium">Title</label>
                            <input asp-for="Title" class="form-control rounded-3 shadow-sm" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-medium">Description</label>
                            <textarea asp-for="Description" class="form-control rounded-3 shadow-sm" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DueDate" class="form-label fw-medium">Due Date</label>
                            <input asp-for="DueDate" type="datetime-local" class="form-control rounded-3 shadow-sm" />
                            <span asp-validation-for="DueDate" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-light border">Cancel</a>
                            <button type="submit" class="btn btn-primary px-4">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>