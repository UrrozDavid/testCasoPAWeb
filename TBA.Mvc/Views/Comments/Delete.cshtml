@model TBA.Models.Entities.Comment

@{
    ViewData["Title"] = "Delete Comment";
}

<div class="container mt-5">
    <h2 class="mb-4 text-danger">Delete Comment</h2>

    <div class="card shadow-sm rounded-4">
        <div class="card-body">
            <h5>Are you sure you want to delete this comment?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.CommentText)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CommentText)</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.CreatedAt)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedAt)</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Card)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Card.Title)</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.User)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.User.Email)</dd>
            </dl>

            <form asp-action="Delete" method="post" class="d-flex gap-3 mt-4">
                <input type="hidden" asp-for="CommentId" />
                <button type="submit" class="btn btn-danger rounded-pill px-4">Delete</button>
                <a asp-action="Index" class="btn btn-secondary rounded-pill px-4">Back to List</a>
            </form>
        </div>
    </div>
</div>
